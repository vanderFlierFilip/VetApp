<form method="post" asp-action="CreateMedicament" asp-controller="@Model.ControllerName" id="medicamentForm">
    <div id="exampleModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title">Нов лек/материјал</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="staticEmail" class=" font-weight-bold">Име</label>
                        <div>
                            <input type="text" class="form-control" asp-for="@Model.Medicament.Name" id="medName">
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="staticEmail" class="  font-weight-bold">Мерна единица:</label>
                        <div class="">
                            <input type="text" class="form-control" asp-for="@Model.Medicament.Uom" id="medUom">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="staticEmail" class="  font-weight-bold">Цена:</label>
                            <div class="">
                                <input type="text" class="form-control" asp-for="@Model.Medicament.Price" id="medPrice">
                            </div>
                        </div>
                        <div class="col">
                            <label for="staticEmail" class="  font-weight-bold">Минимална количина:</label>

                            <div class="">
                                <input type="number" class="form-control" asp-for="@Model.Medicament.MinimalAmount"
                                    id="medMinimalAmount">
                            </div>
                        </div>

                    </div>
                    <div class="">

                        <label for="staticEmail" class="  font-weight-bold">Материјал:</label>
                        <div>
                            <input type="checkbox" asp-for="@Model.Medicament.Material" id="medMaterial">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Затвори</button>
                    <input type="submit" class="btn btn-success" value="Зачувај" id="saveButton" />
                </div>
            </div>
        </div>
    </div>
</form>
